# PAW Environment Variables
# Copy to .env and fill in your values

# --- LLM Provider ---
PAW_LLM__API_KEY=sk-your-api-key-here
PAW_LLM__MODEL=openai/gpt-4o-mini
PAW_LLM__SMART_MODEL=openai/gpt-5.3-codex
# PAW_LLM__API_BASE=https://api.openai.com/v1
# PAW_LLM__TEMPERATURE=0.7
# PAW_LLM__MAX_TOKENS=4096

# --- Auth ---
# Set a strong random API key before exposing PAW beyond localhost
PAW_API_KEY=change-me-strong-key

# --- Logging ---
# PAW_LOG_LEVEL=INFO
# PAW_LOG_FORMAT=json

# --- Database (PostgreSQL) ---
# Local Docker Compose default:
# PAW_DATABASE_URL=postgresql://paw:paw@postgres:5432/paw?sslmode=disable

# --- Telegram Channel (core) ---
# Enable first-class Telegram channel runtime
# PAW_TELEGRAM_ENABLED=true
# PAW_TELEGRAM_BOT_TOKEN=123456789:ABCdefGhIJKlmNOpQRstuVWXyz012345678
# PAW_TELEGRAM_MODE=polling
# PAW_TELEGRAM_DM_POLICY=allowlist
# PAW_TELEGRAM_ALLOW_FROM=12345678,98765432
# PAW_TELEGRAM_GROUPS_ENABLED=false
# PAW_TELEGRAM_REQUIRE_MENTION=true
# PAW_TELEGRAM_AGENT_MODE=true
# PAW_TELEGRAM_MODEL=
# PAW_TELEGRAM_SMART_MODEL=
# PAW_TELEGRAM_POLL_TIMEOUT_S=25
# PAW_TELEGRAM_RETRY_DELAY_S=3
# PAW_TELEGRAM_MAX_MESSAGE_CHARS=3500
